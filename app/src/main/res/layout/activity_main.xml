<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/scoreImage"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:src="@drawable/img_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/teamA"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/first_team"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@id/lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teamA" />

        <TextView
            android:id="@+id/teamB"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/round_btn"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/second_team"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/lined"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/lined"
            android:layout_width="5dp"
            android:layout_height="500dp"
            android:layout_marginTop="110dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/points3_button_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/threepoints"
            android:padding="15dp"
            android:text="@string/points3"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreA" />

        <Button
            android:id="@+id/points2_button_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/basketball_player_scoring_svgrepo_com"
            android:padding="16dp"
            android:text="@string/points2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/points3_button_A" />

        <Button
            android:id="@+id/points1_button_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/onepoint"
            android:padding="15dp"
            android:text="@string/points1"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/points2_button_A" />

        <!--team B view-->

        <TextView
            android:id="@+id/scoreB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lined"
            app:layout_constraintTop_toBottomOf="@id/teamB" />

        <Button
            android:id="@+id/points3_button_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/threepoints"
            android:padding="15dp"
            android:text="@string/points3"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lined"
            app:layout_constraintTop_toBottomOf="@id/scoreB" />

        <Button
            android:id="@+id/points2_button_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:text="@string/points2"
            android:textSize="15sp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/basketball_player_scoring_svgrepo_com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lined"
            app:layout_constraintTop_toBottomOf="@id/points3_button_B" />

        <Button
            android:id="@+id/points1_button_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="@string/points1"
            android:textSize="15sp"
            android:background="@drawable/round_btn"
            android:drawableTop="@drawable/onepoint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lined"
            app:layout_constraintTop_toBottomOf="@id/points2_button_B" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/ic_baseline_sports_basketball_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lined" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>